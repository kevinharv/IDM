{
  "compilerOptions": {
    "pretty": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "remove",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "removeComments": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@routes/*": ["./src/routes/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}